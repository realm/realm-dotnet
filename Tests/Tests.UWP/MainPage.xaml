<forms:WindowsPage
    x:Class="Realms.Tests.UWP.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:forms="using:Xamarin.Forms.Platform.UWP"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <ProgressRing IsActive="True" Foreground="Black" Visibility="Visible" Width="100" Height="100" />
        <TextBlock Text="Loading test application. If this is slow, it's likely due to BaaS app imports"
                   HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0, 200, 0, 0"
                   Foreground="Black" FontSize="30"/>
    </Grid>
</forms:WindowsPage>
