    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug update-changelog tests",
            "cwd": "${workspaceFolder}/.github/actions/update-changelog/",
            "program": "${workspaceFolder}/.github/actions/update-changelog/node_modules/mocha/bin/_mocha",
            "args": [
                "-r",
                "ts-node/register",
                "--colors",
                "${workspaceFolder}/.github/actions/update-changelog/__tests__/*.spec.ts",
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "protocol": "inspector"
        }
    ]
}