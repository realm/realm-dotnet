    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug All Tests",
            "type": "node",
            "request": "launch",
            "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
            "stopOnEntry": false,
            "args": [
                "--config", "${workspaceRoot}/.mocharc.json"
            ],
            "cwd": "${workspaceRoot}",
            "protocol": "inspector",
            "skipFiles": [
                "<node_internals>/**"
            ]
        },
    ]
}