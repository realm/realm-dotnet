{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch ga_package main",
            "type": "node",
            "request": "launch",
            // don't remove the following although it rases a warning. It avoids errors to show up in the console https://github.com/microsoft/vscode/issues/102335
            "resolveSourceMapLocations": [
                "${workspaceFolder}/**",
                "!**/node_modules/**"
            ],
            "args": [
                // "src/main.ts"
                "src/build_cache_executor.ts"
            ],
            // "cwd": "${workspaceRoot}/actions/build_cache_executor",
            "cwd": "${workspaceRoot}/ga_packages/build_cache_executor/",
            "protocol": "inspector",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "sourceMaps": true,
            "runtimeArgs": [
                "--nolazy",
                "-r",
                "ts-node/register"
            ],
            "console": "internalConsole"
        },
        {
            "name": "mocha tests",
            "type": "node",
            "protocol": "inspector",
            "request": "launch",
            "program": "node_modules/mocha/bin/_mocha",
            "stopOnEntry": false,
            "cwd": "${workspaceRoot}/ga_packages/build_cache_executor/",
            // don't remove the following although it rases a warning. It avoids errors to show up in the console https://github.com/microsoft/vscode/issues/102335
            "resolveSourceMapLocations": [
                "${workspaceFolder}/**",
                "!**/node_modules/**"
            ],
            "args": [
                "-r",
                "ts-node/register",
                "__tests__/**/*.ts",
                "--no-timeouts",
                "--colors"
            ],
            "runtimeExecutable": null,
            "env": {
                "NODE_ENV": "testing"
            }
        }
    ]
}